{
  "functions": {
    "app/api/**/*": {
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/tailor",
      "has": [
        {
          "type": "header",
          "key": "x-vercel-edge-timeout"
        }
      ],
      "continue": true
    },
    {
      "src": "/api/tailor",
      "headers": {
        "x-vercel-edge-timeout": "60000"
      },
      "continue": true
    },
    {
      "src": "/api/relevancy",
      "headers": {
        "x-vercel-edge-timeout": "60000"
      },
      "continue": true
    },
    {
      "src": "/api/tailor/job/title",
      "headers": {
        "x-vercel-edge-timeout": "60000"
      },
      "continue": true
    }
  ],
  "crons": [{
    "path": "/api/email/analytics",
    "headers": {
      "x-vercel-edge-timeout": "60000"
    },
    "schedule": "0 17 * * *"
  }]
} 